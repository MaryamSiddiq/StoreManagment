<UserControl x:Class="StoreMS.CustomGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="30">
    <StackPanel>
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Name}" FontSize="14" Foreground="Black" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Text="{Binding PhoneNumber}" FontSize="14" Foreground="Black" VerticalAlignment="Center" Margin="30,0"/>
                <TextBlock Text="{Binding Username}" FontSize="14" Foreground="Black" VerticalAlignment="Center" Margin="30,0"/>
                <Border BorderBrush="#00B087" BorderThickness="1" CornerRadius="4" Width="80" Height="29" Margin="30,0">
                    <TextBlock Text="{Binding Status}" FontSize="14" Foreground="#008767" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
    
</UserControl>
