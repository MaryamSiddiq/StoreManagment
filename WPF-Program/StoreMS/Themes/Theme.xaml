                    xmlns:local="clr-namespace:StoreMS.Themes">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#e9f6f9"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#008ff6"/>
    <SolidColorBrush x:Key="TertiaryBackgroundColor" Color="#1F263E"/>
    <SolidColorBrush x:Key="FourthBackgroundColor" Color="#A1CDF1"/>
